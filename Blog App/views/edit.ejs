<% include ./partials/header %>
    <div class="container">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <h1>Edit Form</h1>
            <div class="form-group">
                <label>Title</label>
                <br>
                <input type="text" placeholder="title" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <br>
                <input type="text" placeholder="image url" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label>Description</label>
                <br>
                <input type="text" placeholder="description" name="blog[description]" value="<%= blog.description %>">
            </div>
            <input type="submit">
        </form>
</div>
<% include ./partials/footer %>